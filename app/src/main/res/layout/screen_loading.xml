<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tool_gradasi"
    tools:context=".LoadingScreen">
    <ImageView
        android:id="@+id/logoSplash"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_apk" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressSplash"
        android:gravity="center_horizontal"
        android:text="wait for a few seconds ..."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <ProgressBar
        android:id="@+id/progressSplash"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:progressTint="@android:color/white"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp" />
</RelativeLayout>