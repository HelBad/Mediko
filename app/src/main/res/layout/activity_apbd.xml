<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".siswa.materi.ActivityApbd">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarApbd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/logo_unesa"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/logo_apk"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="APBD / Mediko"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/apbdPengertian"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@color/colorOrange"
            android:text="Pengertian, Fungsi, Tujuan"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/apbdSumber"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@color/colorOrange"
            android:layout_toRightOf="@id/apbdPengertian"
            android:text="Sumber penerimaan"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/apbdJenis"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@color/colorOrange"
            android:layout_below="@id/apbdSumber"
            android:text="Jenis belanja negara"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/apbdMekanisme"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@color/colorOrange"
            android:layout_toRightOf="@id/apbdJenis"
            android:layout_below="@id/apbdSumber"
            android:text="Mekanisme penyusunan dan Pengaruh ekonomi"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/materiApbd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:src="@drawable/btn_materi"/>
</RelativeLayout>