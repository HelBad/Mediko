<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".guru.ActivitySoal">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSoalGuru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/logo_unesa"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/logo_apk"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="KELOLA SOAL / Mediko"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarSoalGuru"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_papan">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="20dp"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Soal"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@android:color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/textSoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:hint="Tambahkan Pertanyaan"
                            android:textSize="16sp"
                            android:background="@android:color/white"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jawaban"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@android:color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/opsiA"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginEnd="10dp"
                                        android:text="A"
                                        android:textSize="16sp"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/uraianA"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:hint="Tambahkan Uraian Opsi A"
                                        android:text=""
                                        android:textSize="16sp"
                                        android:background="@android:color/white"
                                        android:paddingVertical="5dp"
                                        android:paddingHorizontal="8dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/opsiB"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginEnd="10dp"
                                        android:text="B"
                                        android:textSize="16sp"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/uraianB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:hint="Tambahkan Uraian Opsi B"
                                        android:text=""
                                        android:textSize="16sp"
                                        android:background="@android:color/white"
                                        android:paddingVertical="5dp"
                                        android:paddingHorizontal="8dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/opsiC"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginEnd="10dp"
                                        android:text="C"
                                        android:textSize="16sp"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/uraianC"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:hint="Tambahkan Uraian Opsi C"
                                        android:text=""
                                        android:textSize="16sp"
                                        android:background="@android:color/white"
                                        android:paddingVertical="5dp"
                                        android:paddingHorizontal="8dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/opsiD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginEnd="10dp"
                                        android:text="D"
                                        android:textSize="16sp"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/uraianD"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:hint="Tambahkan Uraian Opsi D"
                                        android:text=""
                                        android:textSize="16sp"
                                        android:background="@android:color/white"
                                        android:paddingVertical="5dp"
                                        android:paddingHorizontal="8dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/opsiE"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginEnd="10dp"
                                        android:text="E"
                                        android:textSize="16sp"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/uraianE"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:hint="Tambahkan Uraian Opsi E"
                                        android:text=""
                                        android:textSize="16sp"
                                        android:background="@android:color/white"
                                        android:paddingVertical="5dp"
                                        android:paddingHorizontal="8dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:text="Kunci Jawaban"
                            android:textColor="@android:color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"/>

                        <RadioGroup
                            android:id="@+id/radioKunci"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/kunciA"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorAccent"
                                android:text="A"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/kunciB"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorAccent"
                                android:text="B"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/kunciC"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorAccent"
                                android:text="C"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/kunciD"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorAccent"
                                android:text="D"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/kunciE"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorAccent"
                                android:text="E"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />
                        </RadioGroup>

                        <Button
                            android:id="@+id/tambahSoal"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:paddingHorizontal="40dp"
                            android:layout_height="wrap_content"
                            android:text="Save"
                            android:textColor="@android:color/black"
                            android:background="@color/colorOrange" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="5dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSoal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/card_soal"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/closeSoalGuru"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:src="@drawable/icon_keluar"/>

    <ImageView
        android:id="@+id/nilaiSoalGuru"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="15dp"
        android:layout_toLeftOf="@id/closeSoalGuru"
        android:src="@drawable/icon_nilai"/>
</RelativeLayout>